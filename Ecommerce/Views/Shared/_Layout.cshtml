    <div class="container">
        <div class="col-md-4">
            <a href="@Url.Action("Index","Home")"><img src="~/Images/Logo.png" /></a>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    @Html.Action("ShowCart", "Carts")
                </div>
                <div class="row">
                    <div class="col-md-8">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <hr />
    <div class="container col-md-12 text-center" style="background-color: lightgray; max-width: 100%;">
        <input id="searchText" type="search" placeholder="Search book" style="width:50%; height: 40px; max-width: 100%; font-weight: bold;" /> <span id="searchButton" onclick="Search()" class="glyphicon glyphicon-search" style="font-size: large; cursor: pointer;"></span>
    </div>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2 text-left" style="margin-left: 20px;">
                @Html.Action("GenreSideBar", "Genres")
            </div>
            <div class="container body-content col-sm-8 col-md-8 col-lg-9">
                @RenderBody()
                <hr />
            </div>
        </div>
    </div>
    <div class="container col-md-12" style="background-color: lightgray; max-width: 100%;">
        <div class="row">
            <table class="table">
                <tr>
                    <td>About us</td>
                </tr>
                <tr>
                    <td>Sitemap</td>
                </tr>
                <tr>
