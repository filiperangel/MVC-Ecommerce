                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.ActionLink("Admin Area", "Admin", "Home", new { @class = "glyphicon glyphicon-lock" })
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/search")
